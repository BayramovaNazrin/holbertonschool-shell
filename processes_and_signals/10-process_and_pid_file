#!/usr/bin/env bash
#comen
PID_FILE="/var/run/myscript.pid"

# Immediately write PID â€” before any traps (to avoid race)
echo "$$" > "$PID_FILE"

# Now set traps
trap 'echo "Y U no love me?!"' INT
trap 'echo "I hate the kill command"; rm -f "$PID_FILE"; exit' TERM
trap 'rm -f "$PID_FILE"; exit' QUIT

# Loop forever
while true; do
    echo "To infinity and beyond"
    sleep 1
done
