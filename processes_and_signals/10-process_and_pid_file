#!/usr/bin/env bash
# PID file creation, message loop, and proper signal handling

PIDFILE="/var/run/myscript.pid"

if ! echo "$$" > "$PIDFILE" 2>/dev/null; then
    PIDFILE="/tmp/myscript.pid"
    echo "$$" > "$PIDFILE"
fi

handle_sigint() {
    echo "Y U no love me?!"
}

handle_sigterm() {
    echo "I hate the kill command"
    rm -f "$PIDFILE"
    exit 0
}

handle_sigquit() {
    rm -f "$PIDFILE"
    exit 0
}

trap handle_sigint INT
trap handle_sigterm TERM
trap handle_sigquit QUIT

while :
do
    echo "To infinity and beyond"
    sleep 1
done

