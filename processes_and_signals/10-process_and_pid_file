#!/usr/bin/env bash
#comen
PID_FILE="/var/run/myscript.pid"

# Define cleanup
cleanup() {
    rm -f "$PID_FILE"
    exit 0
}

# Set traps
trap 'echo "Y U no love me?!"' INT
trap 'echo "I hate the kill command"; cleanup' TERM
trap 'cleanup' QUIT

# Write PID â€” critical step
echo $$ > "$PID_FILE"

# Infinite loop
while true; do
    echo "To infinity and beyond"
    sleep 1
done
