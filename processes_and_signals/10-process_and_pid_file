#!/usr/bin/env bash
# Create PID file, print message forever, and handle signals

PID_FILE="/var/run/myscript.pid"

# Write our own PID to the PID file
echo "$$" > "$PID_FILE" || exit 1

handle_sigint() {
    echo "Y U no love me?!"
}

handle_sigterm() {
    echo "I hate the kill command"
    rm -f "$PID_FILE"
    exit 0
}

handle_sigquit() {
    rm -f "$PID_FILE"
    exit 0
}

trap handle_sigint INT
trap handle_sigterm TERM
trap handle_sigquit QUIT

while : 
do
    echo "To infinity and beyond"
    sleep 1
done
